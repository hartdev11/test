<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dialog_button_secondary_bg"/>
            <corners android:radius="28dp"/>
            <stroke android:width="1dp" android:color="@color/dialog_primary_color"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dialog_background_color"/>
            <corners android:radius="28dp"/>
            <stroke android:width="1dp" android:color="@color/dialog_stroke_color"/>
        </shape>
    </item>
</selector>