<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:width="400dp"
            android:height="200dp"
            android:viewportWidth="400"
            android:viewportHeight="200">
            <!-- ท้องฟ้า -->
            <path android:fillColor="#B3E5FC" android:pathData="M0,0 L400,0 L400,200 L0,200 Z"/>
            <!-- กลุ่มภูเขา (parallax ช้า) -->
            <group android:name="mountainGroup" android:translateX="0">
                <path android:fillColor="#90CAF9" android:pathData="M0,180 L80,100 L160,180 Z"/>
                <path android:fillColor="#64B5F6" android:pathData="M120,180 L200,120 L280,180 Z"/>
                <path android:fillColor="#1976D2" android:pathData="M240,180 L320,110 L400,180 Z"/>
            </group>
            <!-- กลุ่มต้นไม้ (parallax กลาง) -->
            <group android:name="treeGroup" android:translateX="0">
                <path android:fillColor="#388E3C" android:pathData="M60,170 L70,150 L80,170 Z"/>
                <path android:fillColor="#388E3C" android:pathData="M300,170 L310,150 L320,170 Z"/>
            </group>
            <!-- กลุ่มเมฆ (parallax เร็ว) -->
            <group android:name="cloudGroup" android:translateX="0">
                <path android:fillColor="#FFFFFF" android:pathData="M60,40 a10,10 0 1,1 20,0 a10,10 0 1,1 -20,0"/>
                <path android:fillColor="#FFFFFF" android:pathData="M200,30 a12,12 0 1,1 24,0 a12,12 0 1,1 -24,0"/>
            </group>
            <!-- ดวงอาทิตย์ -->
            <path android:fillColor="#FFD600" android:pathData="M350,50 a20,20 0 1,1 40,0 a20,20 0 1,1 -40,0"/>
        </vector>
    </aapt:attr>
    <target android:name="mountainGroup" android:animation="@animator/mountain_pan_animator" />
    <target android:name="treeGroup" android:animation="@animator/tree_pan_animator" />
    <target android:name="cloudGroup" android:animation="@animator/cloud_pan_animator" />
</animated-vector> 