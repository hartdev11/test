<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dialog_primary_variant"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_disabled"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/dialog_primary_color"
                android:endColor="@color/dialog_primary_variant"
                android:angle="135"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
</selector>