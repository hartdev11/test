<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:width="400dp"
            android:height="200dp"
            android:viewportWidth="400"
            android:viewportHeight="200">
            <!-- ท้องฟ้า -->
            <path android:fillColor="#E1F5FE" android:pathData="M0,0 L400,0 L400,200 L0,200 Z"/>
            <!-- กลุ่มตึก (parallax ช้า) -->
            <group android:name="buildingGroup" android:translateX="0">
                <path android:fillColor="#90A4AE" android:pathData="M30,180 L30,120 L70,120 L70,180 Z"/>
                <path android:fillColor="#B0BEC5" android:pathData="M80,180 L80,100 L120,100 L120,180 Z"/>
                <path android:fillColor="#78909C" android:pathData="M130,180 L130,140 L170,140 L170,180 Z"/>
                <path android:fillColor="#607D8B" android:pathData="M180,180 L180,110 L220,110 L220,180 Z"/>
                <path android:fillColor="#90A4AE" android:pathData="M230,180 L230,130 L270,130 L270,180 Z"/>
                <path android:fillColor="#B0BEC5" android:pathData="M280,180 L280,100 L320,100 L320,180 Z"/>
            </group>
            <!-- กลุ่มรถ (parallax กลาง) -->
            <group android:name="carGroup" android:translateX="0">
                <path android:fillColor="#FF7043" android:pathData="M60,190 L90,190 L90,200 L60,200 Z"/>
                <path android:fillColor="#29B6F6" android:pathData="M200,190 L230,190 L230,200 L200,200 Z"/>
            </group>
            <!-- กลุ่มเมฆ (parallax เร็ว) -->
            <group android:name="cloudGroup" android:translateX="0">
                <path android:fillColor="#FFFFFF" android:pathData="M100,40 a10,10 0 1,1 20,0 a10,10 0 1,1 -20,0"/>
                <path android:fillColor="#FFFFFF" android:pathData="M250,30 a12,12 0 1,1 24,0 a12,12 0 1,1 -24,0"/>
            </group>
            <!-- ดวงอาทิตย์ -->
            <path android:fillColor="#FFD600" android:pathData="M350,50 a20,20 0 1,1 40,0 a20,20 0 1,1 -40,0"/>
        </vector>
    </aapt:attr>
    <target android:name="buildingGroup" android:animation="@animator/building_pan_animator" />
    <target android:name="carGroup" android:animation="@animator/car_pan_animator" />
    <target android:name="cloudGroup" android:animation="@animator/cloud_pan_animator" />
</animated-vector> 