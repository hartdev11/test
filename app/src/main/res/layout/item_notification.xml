<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Profile Image with Unread Indicator -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewSenderProfile"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_user"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                android:background="@drawable/profile_image_background"/>

            <!-- Unread Indicator -->
            <View
                android:id="@+id/viewUnreadIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:background="@drawable/unread_indicator_background"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Notification Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNotificationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ชื่อผู้ใช้ กดถูกใจโพสต์ของคุณ"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textViewNotificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 นาทีที่แล้ว"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/inter_regular"/>
        </LinearLayout>

        <!-- Notification Type Icon -->
        <ImageView
            android:id="@+id/imageViewNotificationType"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            android:background="@drawable/notification_type_background"
            android:src="@drawable/ic_heart"
            android:contentDescription="ประเภทแจ้งเตือน"/>

    </LinearLayout>

</androidx.cardview.widget.CardView> 