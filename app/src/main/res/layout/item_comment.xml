<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewCommentProfile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:src="@drawable/ic_default_user"
        tools:src="@tools:sample/avatars"
        android:contentDescription="รูปโปรไฟล์ผู้แสดงความคิดเห็น" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCommentDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="ชื่อผู้ใช้"
            tools:text="Jane Doe" />

        <TextView
            android:id="@+id/textViewCommentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="ข้อความความคิดเห็น"
            tools:text="ความคิดเห็นนี้ดีมากเลย!" />

        <TextView
            android:id="@+id/textViewCommentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:text="เวลา"
            tools:text="2 นาทีก่อน" />

    </LinearLayout>

</LinearLayout>